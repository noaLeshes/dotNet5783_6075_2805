<Window x:Class="PL.Windows.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Windows"
        mc:Ignorable="d"
        Title="ManagerWindow" Height="450" Width="800">
    
    <Grid>
        <Button Content="Products" x:Name="btnProducts" HorizontalAlignment="Left" Margin="205,200,0,0" VerticalAlignment="Top" Width="55" Click="btnProducts_Click" Height="32" BorderBrush="#FF222A18" Foreground="#FF222A18" Background="#FF97AD96" BorderThickness="3,3,3,3"/>
        <Button Content="Orders" x:Name="btnOrders" HorizontalAlignment="Left" Margin="205,100,0,0" VerticalAlignment="Top" Width="55" Click="btnOrders_Click" Height="32" BorderBrush="#FF222A18" Foreground="#FF222A18" Background="#FF97AD96" BorderThickness="3,3,3,3"/>

    </Grid>
</Window>
