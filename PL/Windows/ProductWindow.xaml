<Window x:Class="PL.Windows.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Windows"
        mc:Ignorable="d"
        Title="ProductWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Id:" HorizontalAlignment="Left" Margin="200,60,0,0" VerticalAlignment="Top" Height="27" Width="80"/>
        <Label Content="Category:" HorizontalAlignment="Left" Margin="200,100,0,0" VerticalAlignment="Top" Height="27" Width="80"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="200,140,0,0" VerticalAlignment="Top" Height="27" Width="80"/>
        <Label Content="Price:" HorizontalAlignment="Left" Margin="200,180,0,0" VerticalAlignment="Top" Height="27" Width="80"/>
        <Label Content="In Stock:" HorizontalAlignment="Left" Margin="200,220,0,0" VerticalAlignment="Top" Height="27" Width="80"/>
        <ComboBox x:Name="cmbProductCategory" HorizontalAlignment="Left" Margin="418,100,0,0" VerticalAlignment="Top" Width="120" />
        <TextBox x:Name="txtId" Text="" HorizontalAlignment="Left" Margin="418,60,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtName" Text="" HorizontalAlignment="Left" Margin="418,140,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtPrice" Text="0" HorizontalAlignment="Left" Margin="418,180,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtInStock" Text="0" HorizontalAlignment="Left" Margin="418,220,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Button Content="Add" x:Name="btnAdd" HorizontalAlignment="Left" Margin="200,305,0,0" VerticalAlignment="Top" Click="btnAdd_Click"/>
        <Button Content="Update" x:Name="btnUpdate" HorizontalAlignment="Left" Margin="200,348,0,0" VerticalAlignment="Top" Width="53" Click="btnUpdate_Click"/>

    </Grid>
</Window>
